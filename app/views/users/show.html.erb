<% provide(:title, @user.name) %>
<div class="user-show">
  <div class="container">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">

      <div class="row center">
        <%= gravatar_for @user %>
      </div>

      <table class="table-responsive">
        <tr><td><div class="bold">名前</div><%= @user.name %></td></tr>
        <tr><td><div class="bold">メールアドレス</div><%= @user.email %></td></tr>
        <% unless @user.birth_place.blank? %>
          <tr><td><div class="bold">出身地</div><%= @user.birth_place %></td></tr>
        <% end %>

        <% unless @user.address.blank? %>
          <tr><td><div class="bold">現住所(アパート名など)</div><%= @user.address %></td></tr>
        <% end %>

        <% if @user.sex == "男" %>
          <tr><td><div class="bold">性別</div>男</td></tr>
        <% else %>
          <tr><td><div class="bold">性別</div>女</td></tr>
        <% end %>

        <% unless @user.birth_day.blank? %>
          <tr><td><div class="bold">生年月日</div><%= @user.birth_day.strftime("%Y年%m月%d日") %></td></tr>
        <% end %>

        <% unless @user.enroll_year.blank? %>
          <tr><td><div class="bold">入学した年</div><%= @user.enroll_year.strftime("%Y年") %></td></tr>
        <% end %>

        <% unless @user.department.blank? %>
          <tr><td><div class="bold">学科など</div><%= @user.department %></td></tr>
        <% end %>

        <% unless @user.part.blank? %>
          <tr><td><div class="bold">担当パート</div><%= @user.part %></td></tr>
        <% end %>

        <% unless @user.genre.blank? %>
          <tr><td class="textarea"><div class="bold">好きなジャンルやバンドなど</div><%= simple_format(h @user.genre) %></td></tr>
        <% end %>

        <% unless @user.profile.blank? %>
          <tr><td class="textarea"><div class="bold">自己紹介</div><%= simple_format(h @user.profile) %></td></tr>
        <% end %>

        <% if @user.graduated == false %>
          <tr><td><div class="bold">在学状況</div>在校生</td></tr>
        <% else %>
          <tr><td><div class="bold">在学状況</div>卒業生</td></tr>
        <% end %>

        <% if @user.mail_receive == true %>
          <tr><td><div class="bold">サークルメール受信設定</div>受け取る</td></tr>
        <% else %>
          <tr><td><div class="bold">サークルメール受信設定</div>受け取らない</td></tr>
        <% end %>
      </table>

      <% if current_user?(@user) %>
        <div id="edit-profile">
          <%= link_to "プロフィールを編集するにはこちら", edit_user_path(current_user) %>
        </div>
      <% end %>

    </div>
  </div>
</div>