<% provide(:title, 'サークルメンバー') %>
<div class="container">

  <h1></h1>

  <!-- 検索フォーム -->
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_or_email_or_birth_place_or_address_or_sex_or_department_or_part_or_genre_or_profile_cont, class: 'form-control', placeholder: "検索キーワードを入力してください" %>
        <%= f.submit '検索', class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div><!-- row -->

  <div class="center row">
    <%= paginate @users %>
  </div>

  <ul class="index row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 nopadding">
      <%= render @users %>
    </div>
  </ul>

  <div class="center row">
    <%= paginate @users %>
  </div>



</div>