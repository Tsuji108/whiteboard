<li>
  <table class="index-table">
    <%= "<tr><th>送信日時</th><td>：</td><td>#{(l mailing_list.sent_at, format: :long)}</td></tr>
         <tr><th>送信者</th><td>：</td><td>#{link_to mailing_list.from_name, mailing_list.user}</td></tr>
         <tr><th>タイトル</th><td>：</td><td>#{my_truncate(mailing_list.title, 50)}</td></tr>
         <tr><th>本文</th><td>：</td><td>#{my_truncate(mailing_list.content, 200)}</td></tr>".html_safe %>
  </table>

  <div class="small-btn">
    <%= link_to "確認", user_mailing_list_path(current_user, mailing_list), class: "btn btn-primary" %>
  </div>
</li>