<% provide(:title, "Log in") %>
<div class="login">
  <div class="jumbotron">
    <div class="container">

      <div class="row">
        <div class="white-filter col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
          <h1></h1>
          <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
            <%= form_for(:session, url: login_path) do |f| %>
              
              <%= f.label :email, "メールアドレス", class: '' %>
              <%= f.email_field :email, class: 'form-control' %>

              <%= f.label :password, "パスワード" %>
              <%= link_to "忘れた方はこちら", new_password_reset_path %>
              <%= f.password_field :password, class: 'form-control' %>
              
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            <% end %>

            <p><%= link_to "新規登録はこちら", signup_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>