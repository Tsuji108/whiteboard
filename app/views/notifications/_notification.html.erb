<li class="notification">

  <div class="bold">
    <%= notification.updated_at.strftime("%Y年%m月%d日") %>
  </div>
  
  <div class="content">
    <%= simple_format(h notification.message) %>
  </div>
  <% if current_user.id == 1 || current_user.id == 2 %>
    <div class="small-btn">
      <%= link_to "編集", edit_notification_path(notification), class: "btn btn-primary" %>
      <%= link_to "削除", notification_path(notification), method: :delete,
                data: {confirm: "「#{notification.updated_at.strftime("%Y年%m月%d日")}」の内容を削除してよろしいですか？"},
                class: "btn btn-danger" %>
    </div>
  <% end %>

</li>