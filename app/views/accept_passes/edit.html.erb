<% provide(:title, "承認パスワード変更") %>
<div class="container">
  <h1></h1>
  <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 nopadding">
    <%= form_for(@accept_pass) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :accept_pass, "承認パスワード" %>
      <%= f.text_field :accept_pass, class: 'form-control' %>

      <%= f.submit "承認パスワード変更", class: 'btn btn-primary' %>

    <% end %>
  </div><!-- col -->
</div><!-- container -->
